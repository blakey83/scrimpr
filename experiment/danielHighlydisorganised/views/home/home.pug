                              div(class='header-search__content pos-relative')
                                input(type='search', name='header-search', placeholder='Search products', required)
                                button(class='pos-absolute', type='submit')
                                  i(class='icon-search')
                            ul(class='header__user-action-icon m-tb-15 text-center')
                              li
                                a(href='#')
                                  i(class='icon-users')
                              li
                                a(href='#')
                                  i(class='icon-heart')
                                  span(class='item-count pos-absolute') 3
