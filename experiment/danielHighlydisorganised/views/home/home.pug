doctype html
html(lang='zxx')
  head
    meta(charset='UTF-8')
    title Scrimpr | Insert text
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='shortcut icon', href='images/favicon.png', type='image/png')
    link(rel='stylesheet', href='/css/vendor/vendor.min.css')
    link(rel='stylesheet', href='/css/plugin/plugins.min.css')
    link(rel='stylesheet', href='/css/main.min.css')
    link(rel='stylesheet', href='/css/main.css')
  body
    div(class='header d-none d-lg-block')
      div(class='header__top')
        div(class='container')
          div(class='row')
            div(class='col-12')
              div(class='header__top-content d-flex justify-content-between align-items-center')
                div(class='header__top-content--left')
      div(class='header__center sticky-header p-tb-10')
        div(class='container')
          div(class='row')
            div(class='col-12 d-flex justify-content-between align-items-center')
              div(class='header__logo')
                a(href='index.html', class='header__logo-link img-responsive')
                  img(class='header__logo-img img-fluid', src='images/logo/scrimprlogolargerls.jpg', alt='')
              div(class='header-menu')
                nav
                  ul(class='header__nav')
                    li(class='header__nav-item pos-relative')
                      a(href='index.html', class='header__nav-link') Home
                    li(class='header__nav-item pos-relative')
                      a(href='#', class='header__nav-link') Lists
                        i(class='fal fa-chevron-down')
                      ul(class='mega-menu pos-absolute')
                        li(class='mega-menu__box')
                          div(class='mega-menu__item-box')
                            span(class='mega-menu__title') List Menu
                            ul(class='mega-menu__item')
                          div(class='mega-menu__item-box')
                            ul(class='mega-menu__item')
                              li(class='mega-menu__banner ')
                                a(href='#', class='mega-menu__banner-link')
                                  img(src='images/banner/menu-banner.jpg', alt='', class='mega-menu__banner-img mega-menu__banner-img--vertical')
                    li(class='header__nav-item pos-relative')
                      a(href='/users', class='header__nav-link')
                        if user
                          | #{user.firstName}
                          span.caret
                            span
                        else
                          | Account  
                          span.caret
                            span
                      li(class='header__nav-item pos-relative')
                        a(href='#', class='header__nav-link') Empty
                        li(class='header__nav-item pos-relative')
                          a(href='#', class='header__nav-link') Empty
                        li(class='header__nav-item pos-relative')
                          a(href='#', class='header__nav-link') Empty
                        ul(class='header__user-action-icon')
                          li
                            a(href='#')
                              i(class='icon-users')
                          li
                            a(href='#')
                              i(class='icon-heart')
                        div(class='header__bottom p-tb-30')
                          div(class='container')
                            div(class='row justify-content-between align-items-center')
                              div(class='col-xl-3 col-lg-3')
                                div(class='header-menu-vertical pos-relative')
                                  h4(class='menu-title link--icon-left')
                                    i(class='far fa-align-left')
                                    | CATEGORIES
                                  ul(class='menu-content pos-absolute')
                                    li(class='menu-item')
                                      a(href='#') Fruits and Vegetables
                                    li(class='menu-item')
                                      a(href='#') Bakery
                                    li(class='menu-item')
                                      a(href='#') Fridge
                                    li(class='menu-item')
                                      a(href='#') Freezer
                                    li(class='menu-item')
                                      a(href='#') Pantry
                                    li(class='menu-item')
                                      a(href='#') Drinks
                                    li(class='menu-item')
                                      a(href='#') Bathroom
                                    li(class='menu-item')
                                      a(href='#') Laundry
                                    li(class='menu-item')
                                      a(href='#') Pet
                              div(class='col-xl-7 col-lg-6')
                                form(class='header-search', action='#', method='post')
                                  div(class='header-search__content pos-relative')
                                    input(type='search', name='header-search', placeholder='Search products', required)
                                    button(class='pos-absolute', type='submit')
                                      i(class='icon-search')
                              div(class='col-xl-2 col-lg-3')
                                div(class='header-phone text-end')
                                  span
                        #offcanvas-mobile-menu(class='offcanvas offcanvas-mobile-menu')
                          div(class='offcanvas__top')
                            span(class='offcanvas__top-text')
                            button(class='offcanvas-close')
                              i(class='fal fa-times')
                          div(class='offcanvas-inner')
